<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hero.poetry.mapper.RankMapper">
    <select id="getScoreByUserId" resultType="java.lang.Integer">
        SELECT `score` FROM `rank` WHERE user_id = #{userId}
    </select>
    <select id="getAllScoreByGradeId" resultType="com.hero.poetry.entity.Rank">
        SELECT `id`,`score`,`grade_id`,`user_id` from `rank` WHERE `grade_id` = #{gradeId} GROUP BY `score` DESC
    </select>

</mapper>